{
    "name": "ezzaze/ssim-parser",
    "description": "IATA SSIM schedules parser",
    "keywords": [
        "ezzaze",
        "ssim-parser"
    ],
    "homepage": "https://github.com/ezzaze/ssim-parser",
    "license": "MIT",
    "authors": [
        {
            "name": "Marwane Ezzaze",
            "email": "me@ezzaze.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Ezzaze\\SsimParser\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ezzaze\\SsimParser\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
